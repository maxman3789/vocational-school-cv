<div class="container">
    {{#if removedUser}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Removed!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <div class="row">

        <div class="col-6">
            <h1>Classes</h1>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a href="/addclass" type="button" class="btn btn-primary align-self-center">+ Add Class</a>
        </div>
    </div>
    <div class="row">
        <table>
            <thead class="thead dark">
                <tr>
                    <th scope="col">
                        <form class="d-flex" method="POST" action="/class" novalidate>
                            <input class="form-control me-2" type="search" placeholder="Search" name="search"
                                aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </th>
                </tr>
            </thead>
        </table>
        <table class="table table-bordered">
            <thead class="thead dark">
                <tr>
                    {{!-- <th scope="col">#</th> --}}
                    <th scope="col">Class Name</th>
                    <th scope="col">Capacity</th>
                    <th scope="col">Semester</th>
                    <th scope="col">Campus</th>
                    <th scope="col">Instructor</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    {{!-- <td scope="row">{{this.id}}</td> --}}
                    <td>{{this.class_name}}</td>
                    <td>{{this.capacity}}</td>
                    <td>{{this.semester_name}}</td>
                    <td>{{this.campus_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td class="text-end">
                        <a href="/viewclass/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                                class="bi bi-eye"></i> View</a>
                        <a href="/editclass/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                                class="bi bi-pencil"></i>
                            Edit</a>
                    </td>
                    {{!-- <td class="text-end">
                    
                        <a href="/delete/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                                class="bi bi-person-x"></i> Delete</a>
                    </td> --}}
                </tr>
                {{/each}}
            </tbody>
        </table>
        
    </div>
</div>