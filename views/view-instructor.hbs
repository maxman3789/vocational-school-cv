<div class="container">
    <div class="row">
        <h2>View Instructor</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/instructor">Instructor</a></li>
                <li class="breadcrumb-item active" aria-current="page">View Instructor</li>
            </ol>
        </nav>
        <hr>
        <div class="view-user p-5">
            {{#each rows}}
            <div class="row mb-5">
                <div class="col text-center">
                    <h3>{{this.last_name}}, {{this.first_name}} {{this.middle_name}}</h3>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td>{{this.email}}</td>
                            </tr>
                            <tr>
                                <td><strong>Phone:</strong></td>
                                <td>{{this.phone}}</td>
                            </tr>
                            <tr>
                                <td><strong>User Name:</strong></td>
                                <td>{{this.username}}</td>
                            </tr>
                            <tr>
                                <td><strong>Password:</strong></td>
                                <td>{{this.password}}</td>
                            </tr>
                            <tr>
                                <td><strong>Street:</strong></td>
                                <td>{{this.street}}</td>
                            </tr>
                            <tr>
                                <td><strong>City:</strong></td>
                                <td>{{this.city}}</td>
                            </tr>
                            <tr>
                                <td><strong>State:</strong></td>
                                <td>{{this.state}}</td>
                            </tr>
                            <tr>
                                <td><strong>Zip:</strong></td>
                                <td>{{this.zip}}</td>
                            </tr>
                            <tr>
                                <td><strong>Country:</strong></td>
                                <td>{{this.country}}</td>
                            </tr>
                            <tr>
                                <td><strong>Creation Date:</strong></td>
                                <td>{{this.creation_date}}</td>
                            </tr>
                            <tr>
                                <td><strong>Campus:</strong></td>
                                <td>{{this.campus_name}}</td>
                            </tr>
                            <tr>
                                <td><strong>Department:</strong></td>
                                <td>{{this.department_name}}</td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
                
            </div>
            {{/each}}
        </div>
    </div>
</div>