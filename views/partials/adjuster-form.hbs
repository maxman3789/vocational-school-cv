<div class="container">
    <div class="row">

        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_name}}" placeholder="Adjuster"
                    name="adjuster_name">
                <label for="floatingInput">Adjuster Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_phone}}" placeholder="Phone"
                    name="adjuster_phone">
                <label for="floatingInput">Phone</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_fax}}" placeholder="Fax"
                    name="adjuster_fax">
                <label for="floatingInput">Fax</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_email}}" placeholder="Email"
                    name="adjuster_email">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_supervisor}}" placeholder="Supervisor"
                    name="adjuster_supervisor">
                <label for="floatingInput">Supervisor</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_supervisor_phone}}" placeholder="Supervisor Phone"
                    name="adjuster_supervisor_phone">
                <label for="floatingInput">Supervisor Phone</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.adjuster_fax}}" placeholder="Supervisor Fax"
                    name="adjuster_supervisor">
                <label for="floatingInput">Supervisor Fax</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value="{{this.insurance_id}}" placeholder="Insurance ID"
                    name="insurance_id">
                <label for="floatingInput">Insurance ID</label>
            </div>
        </div>
        <div class="col-12 d-grid">
            <button class="btn btn-primary" type="submit">Submit</button>
            <hr>
            <hr>
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header bg-danger text-white" id="flush-headingOne">
                        <button class="accordion-button collapsed bg-danger text-white" type="button" data-bs-toggle="collapse"
                            data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            DELETE?
                        </button>
                    </h2>

                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                        data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <a href="/delete/{{this.id}}" type="button" class="btn btn-danger"><i
                                    class="bi bi-person-x"></i> Delete</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>